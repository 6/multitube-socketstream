// Stylus docs:  http://learnboost.github.com/stylus/docs/js.html
// Nib docs:     http://visionmedia.github.com/nib
@import 'nib'

body, html
  height 100%

body
  font normal 1em sans-serif
  background linear-gradient(top, #eee, #fff)
  text-align center

p
  margin-bottom 1em

a
  color #000a68

.hide
  display none

#room-name
  width: 300px
  font-size 1.2em
  margin 0.7em
  color #333
  border 1px solid #ccc
  border-radius 5px
  padding 5px

#content
  padding 0 20px

#yt-form
  border 1px solid #bbb
  width 522px
  text-align left
  margin 10px auto
  padding 10px
  border-radius 5px
  #yt-link
    border 1px solid #bbb
    border-radius 5px
    width 509px
    padding 5px
